{
  "name": "Jira Downloads",
  "description": "Изменение логики скачивания файлов",
  "version": "1.1",
  "manifest_version": 3,
  
  "permissions": ["tabCapture", "tabs", "activeTab", "scripting", "cookies"],
  
  "action": {
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": ["content.js"]
		}
	]
}